<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Khaatabook</title>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <!-- Main Container -->
    <div class="container mx-auto p-6">
      <!-- Navbar -->
      <div
        class="nav flex justify-between items-center bg-blue-600 text-white p-4 rounded-md shadow-md"
      >
        <h1 class="text-2xl font-bold">Khaatabook</h1>
        <a
          href="/create"
          class="bg-white text-blue-600 px-4 py-2 rounded-md hover:bg-blue-200"
        >
          Create New Hisaab
        </a>
      </div>

      <!-- Content Section -->
      <div class="mt-8">
        <h3 class="text-xl font-semibold mb-4">All Hisaab Kitaab</h3>
        <!-- Single Hisaab -->
        <% files.forEach(element => { %>
        <div
          class="hisaab flex justify-between items-center bg-white p-4 rounded-md shadow-md mb-4"
        >
          <h5 class="text-lg">
            <%= element.name.substring(0,element.name.length-4)%>
          </h5>
          <div class="flex gap-4 items-center">
            <a href="/hisaab/<%= element.name %>" class="text-blue-600 hover:underline">â†’ View</a>
            <a href="/edit/<%= element.name %>" class="text-yellow-500 hover:underline">Edit</a>
            <form method="post">
              <input
                type="button"
                onclick="delete_pop_up(this, '<%= element.name %>')"
                value="Delete"
                class="bg-red-500 text-white px-4 py-1 rounded-md hover:bg-red-600 cursor-pointer"
              />
            </form>
          </div>
        </div>
        <% }); %>
        <!-- Add more Hisaab items here -->
      </div>
    </div>

    <!-- External JavaScript -->
    <script src="/scripts/delete.js"></script>
  </body>
</html>
